                <a class="prev"><i class="fa fa-angle-left"></i></a>
                <a class="next"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                var owl = $("#owl-tool");
                owl.owlCarousel({
                    items: 7,
                    itemsDesktop: [1000, 7],
                    itemsDesktopSmall: [992, 5],
                    itemsTablet: [768, 5],
                    itemsMobile: false
                });
                $(".next").click(function () {
                    owl.trigger('owl.next');
                })
                $(".prev").click(function () {
                    owl.trigger('owl.prev');
                });
            });
            $(function () {
                $(".tool-content .container").addClass('absh').animate({ opacity: 0.0, left: '-100px' }, 100, function () {
                    $(this).delay(50);
                    $(".tool-content .container").addClass('absh').animate({
                        opacity: 1.0, left: '0'
                    }, 500, function () {
                        $(this).delay(10).removeClass('absh');
                    });
                });
            });
        </script>
